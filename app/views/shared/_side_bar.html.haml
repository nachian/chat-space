.side-contents
  .side-contents__user
    .side-contents__user__name
      = current_user.name
    = link_to edit_user_path(current_user) do
      = fa_icon "cog", class:'side-contents__user__btn'
    = link_to new_group_path do
      = fa_icon "edit", class:'side-contents__user__btn'

  .side-contents__groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .side-contents__groups__name
          = group.name
        .side-contents__groups__text
          = group.show_last_message
                  